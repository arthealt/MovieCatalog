<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MovieCatalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color.
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>-->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SearchView" parent="Theme.MovieCatalog">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:colorAccent">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:editTextColor">@color/colorPrimaryDark</item>
    </style>
</resources>